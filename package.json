{
  "name": "tiptap-steps",
  "version": "1.0.3",
  "description": "A step-by-step guide extension for Tiptap",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "build": "tsup",
    "dev": "tsup --watch",
    "ci:publish": "pnpm publish -r",
    "check": "tsc -b && biome check",
    "check:fix": "tsc -b && biome check --write",
    "prepack": "pnpm build",
    "test": "vitest --environment=jsdom",
    "test:coverage": "vitest --coverage"
  },
  "lint-staged": {
    "*": "pnpm check:fix"
  },
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "keywords": ["tiptap", "tiptap extension", "tiptap steps", "prosemirror"],
  "author": "Eva Decker",
  "files": ["dist/"],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.29.1",
    "@tiptap/core": "^2.11.7",
    "@tiptap/extension-bold": "^2.11.7",
    "@tiptap/extension-document": "^2.11.7",
    "@tiptap/extension-italic": "^2.11.7",
    "@tiptap/extension-paragraph": "^2.11.7",
    "@tiptap/extension-text": "^2.11.7",
    "@vitest/coverage-v8": "^3.1.1",
    "esbuild": "^0.25.2",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.11.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/namesakefyi/tiptap-steps.git",
    "directory": "package"
  },
  "packageManager": "pnpm@10.8.0"
}
